{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks"
  },
  "deploy": {
    "startCommand": "MCP_ENABLED=false node dist/start-with-http.js",
    "restartPolicyMaxRetries": 5,
    "restartPolicyWindowSeconds": 60,
    "envVariables": {
      "NODE_ENV": "production",
      "PORT": "3000"
    }
  }
}
