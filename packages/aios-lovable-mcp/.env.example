# AIOS Lovable MCP Server Configuration
# Copy this file to .env and fill in your values

# Environment
NODE_ENV=development
PORT=3000

# Redis Configuration (local development)
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_URL=redis://localhost:6379  # Alternative to REDIS_HOST/PORT

# Job Queue Settings
QUEUE_CONCURRENCY=5
JOB_TIMEOUT_MS=600000

# API Keys (JSON format or comma-separated)
# Format: {"key-name":"aios_actual_key_value"}
AIOS_API_KEYS={"local":"aios_dev_12345678","lovable":"aios_lovable_abcdefgh"}

# Admin Secret (for key management endpoints)
ADMIN_API_KEY=admin_secret_key_12345

# Webhook Settings
WEBHOOK_TIMEOUT_MS=10000
WEBHOOK_MAX_RETRIES=3

# Logging
LOG_LEVEL=debug

# Optional: Error Tracking (Sentry)
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Optional: Feature Flags
ENABLE_WEBHOOKS=true
ENABLE_SSE=true
ENABLE_REST_API=true
